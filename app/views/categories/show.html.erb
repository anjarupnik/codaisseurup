
   <div class="col-md-9">
    <div class="panel panel-info">
      <div class="panel-heading">
      <h1> <%= @category.name %> events </h1>
      </div>

      <div class="panel-body">

        <div class = "container"
        <% @category.events.each do |event| %>
        <div class="col-md-9">
        <div class="col-md-6" >
            <h4><%= event.name %></h4>
            <hr />
            <% event.photos.each do |photo| %>
            <%= image_tag photo.image.thumbnail %>
             <% end %>
          <br />
          <br />

            <div style = "margin-left: 80px;class="col-md-6" >
            <%= link_to "View", event, class: "btn btn-info" %>
            <%= link_to "Update", edit_event_path(event), class: "btn btn-info" %>
          </div>

          <br />
                    <hr />

          </div>
          </div>
          <% end %>


          <%= link_to "Back", root_path, class: "btn btn-default" %>
