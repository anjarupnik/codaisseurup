<%= form_for @event, html: { multipart: true } do |f| %>


<div class="form-group">
  <%= f.label :name %>
  <div class="form-group">
  <%= f.text_field :name %>
</div>
</div>

<br />
<div class="form-group">
  <%= f.label :description %>
<div  class="form-group" >
 <%= f.text_area :description, size: "100x10" %>
</div>
</div>
<br />


<div class="form-group">
  <%= f.label :location %>
  <div class="form-group">
  <%= f.text_field :location %>
</div>
</div>
<br />

<div class="form-group">
  <%= f.label :price %>
  <div class="form-group">
  <%= f.number_field :price %>
</div>
</div>
<br />

<div class="form-group">
  <%= f.label :capacity %>
  <div class="form-group">
  <%= f.number_field :capacity %>
<div>
  </div>
<br />
  <label>Amenities</label>


  <div class="form-group">
    <%= f.check_box :includes_food %> Food
  </div>
  <div class="form-group">
    <%= f.check_box :includes_drinks %> Drinks
  </div>

  <br/>

  <div class="form-group">
  <%= f.label :starts_at %>
 <%= f.datetime_select :starts_at %>
 <br/>
 <br/>
   <div class="form-group">
  <%= f.label :ends_at %>
  <%= f.datetime_select :starts_at %>
</div>
</div>

<br />
  <div class="form-group">
    <label>Photos</label>
    <span class="btn btn-default">
    
    </span>
  </div>


  <div id="photos">
  <%= render 'photos/list' %>
</div>


  <br/>
    <div class="form-group">
      <%= f.check_box :active %> Active
    </div>

  <br />
  <br />

  <label>Categories</label>

<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
  <div class="form-group">
    <%= b.check_box(class: "check_box") %> <%= b.object.name %>
  </div>
<% end %>




  <%= f.submit (@event.new_record? ? "Create" : "Update")%>
</div>
<% end %>
