
   <div class="col-md-9">
    <div class="panel panel-info">
      <div class="panel-heading">
        Your Events
      </div>

      <div class="panel-body">

        <% @events.each do |event| %>
        <div class="col-md-9">

          <div class="col-md-6">
            <h4><%= event.name %></h4>
            <%= link_to "View", event, class: "btn btn-info" %>
            <%= link_to "Update", edit_event_path(event), class: "btn btn-info" %>
                    <hr />
          </div>
          </div>



        <% end %>

      </div>
    </div>


    <%= link_to "Add new event", new_event_path, class: "btn btn-info" %>
  </div>
</div>
